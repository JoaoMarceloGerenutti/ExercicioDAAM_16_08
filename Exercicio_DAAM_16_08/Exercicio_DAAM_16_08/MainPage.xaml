<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Exercicio_DAAM_16_08.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Exercicio da Aula 16/08 de DAAM" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Digite suas informações" FontSize="Title" HorizontalTextAlignment="Center"/>
        
        <Label Text="Nome:" FontSize="20"/>
        <Entry x:Name="etNome"/>

        <Label Text="Data de Nascimento:" FontSize="20"/>
        <DatePicker x:Name="dtNascimento"/>

        <Button Text="Confirmar" Clicked="Button_Clicked"/>
    </StackLayout>
</ContentPage>
